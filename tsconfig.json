{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Environment Settings */
    "module": "commonjs", // ✅ đổi từ nodenext -> commonjs
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["node", "express"], // ✅ load type Node + Express

    /* Module Resolution */
    "esModuleInterop": true, // ✅ cho phép import express from "express"
    "allowSyntheticDefaultImports": true,

    /* Outputs */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Stricter Typechecking Options */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Recommended Options */
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
